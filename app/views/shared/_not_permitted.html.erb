<% if alert %>
    <div class="panel panel-danger">
        <h2 class="panel-heading">Error</h2>
        <div class="panel-body">
            <p><%= alert %></p>
            <p>Please make sure you have the correct permissions.</p>
        </div>
    </div>
<% else %>
    <p>You do not have the correct permissions to access this page.</p>
<% end %>
</div>

