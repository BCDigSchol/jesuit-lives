<nav class="navbar navbar-expand-md topbar" role="navigation">
  <div class="<%= container_classes %>">
    
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#user-util-collapse" aria-controls="user-util-collapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="navbar-collapse justify-content-md-center" id="user-util-collapse">
      <%= render 'shared/user_util_links' %>
    </div>
  </div>
</nav>

<%# Select which search container to use based on if there are search parameters present %>
<% if has_search_parameters? %>
  <div class="navbar-search navbar navbar-light bg-light" role="navigation">
    <div class="<%= container_classes %>">
      <%= render_search_bar  %>
    </div>
  </div>
<% else %>
  <%= render 'shared/homepage_search_box' %>
<% end %>

