<p id="notice"><%= notice %></p>

<% if @place.nil? %>
    <p>This record doesn't exist.</p>
    <%= link_to 'Go Back to Places index', places_path %>
<% elsif can? :read, Place %>
  <p>
    <strong>Label:</strong>
    <%= @place.label %>
  </p>

  <p>
    <strong>Latitude:</strong>
    <%= @place.latitude %>
  </p>

  <p>
    <strong>Longitude:</strong>
    <%= @place.longitude %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @place.description %>
  </p>

  <div class="button-group mt-4">
    <% if can? :update, Place %>
      <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-primary' %>
    <% end %>
    <%= link_to 'Back', places_path, class: 'btn btn-info' %>
  </div>
<% else %>
  <%= render 'shared/not_permitted' %>
<% end %>