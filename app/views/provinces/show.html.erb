<p id="notice"><%= notice %></p>

<% if @province.nil? %>
    <p>This record doesn't exist.</p>
    <%= link_to 'Go Back to Provinces index', provinces_path %>
<% elsif can? :read, Province %>
  <p>
    <strong>Abbreviation:</strong>
    <%= @province.abbreviation %>
  </p>

  <p>
    <strong>Label:</strong>
    <%= @province.label %>
  </p>

  <p>
    <strong>Unabridged:</strong>
    <%= @province.unabridged %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @province.description %>
  </p>

  <div class="button-group mt-4">
    <% if can? :update, Province %>
      <%= link_to 'Edit', edit_province_path(@province), class: 'btn btn-primary' %>
    <% end %>
    <%= link_to 'Back', provinces_path, class: 'btn btn-info' %>
  </div>
<% else %>
  <%= render 'shared/not_permitted' %>
<% end %>