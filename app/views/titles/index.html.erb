<p id="notice"><%= notice %></p>

<h1>Titles</h1>

<%= paginate @titles %>

<table>
  <thead>
    <tr>
      <th>Abbreviation</th>
      <th>Label</th>
      <th>Unabridged</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @titles.each do |title| %>
      <tr>
        <td><%= title.abbreviation %></td>
        <td><%= title.label %></td>
        <td><%= title.unabridged %></td>
        <td><%= title.description %></td>
        <td><% if can? :read, Title %><%= link_to 'Show', title %><% end %></td>
        <td><% if can? :edit, Title %> | <%= link_to 'Edit', edit_title_path(title) %><% end %></td>
        <td><% if can? :delete, Title %>| <%= link_to 'Destroy', title, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @titles %>

<br>

<% if can? :create, Title %>
  <%= link_to 'New Title', new_title_path %>
<% end %>
